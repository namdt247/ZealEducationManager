@model Zeal_Institute.Models.Course

@{
    ViewBag.Title = "Edit";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}

<p class="text-left">
    <a href="@Url.Action("Index", "Courses")" class="text-gray-700"><i class="fas fa-angle-left me-2"></i> Back to List</a>
</p>
<h4>Edit course</h4>

<div class="card shadow-sm table-wrapper mb-3">
    <div class="card-body">
        @using (Html.BeginForm())
        {
            @Html.AntiForgeryToken()
            <div class="row">
                <div class="col-sm-6 col-md-6">
                    @Html.ValidationSummary(true, "", new { @class = "invalid-feedback" })
                    @Html.HiddenFor(model => model.Id)

                    <div class="mb-4">
                        @Html.LabelFor(model => model.Name, htmlAttributes: new { @class = "" })
                        @Html.EditorFor(model => model.Name, new { htmlAttributes = new { @class = "form-control", placeholder = "Enter name", autocomplete = "off" } })
                        @Html.ValidationMessageFor(model => model.Name, "", new { @class = "invalid-feedback" })
                    </div>

                    <div class="mb-4">
                        @Html.LabelFor(model => model.Code, htmlAttributes: new { @class = "" })
                        @Html.EditorFor(model => model.Code, new { htmlAttributes = new { @class = "form-control", placeholder = "Enter code", autocomplete = "off" } })
                        @Html.ValidationMessageFor(model => model.Code, "", new { @class = "invalid-feedback" })
                    </div>

                    <div class="mb-4">
                        @Html.LabelFor(model => model.Price, htmlAttributes: new { @class = "" })
                        @Html.EditorFor(model => model.Price, new { htmlAttributes = new { @class = "form-control", placeholder = "Enter description", autocomplete = "off" } })
                        @Html.ValidationMessageFor(model => model.Price, "", new { @class = "invalid-feedback" })
                    </div>

                    <div class="mb-4">
                        @Html.LabelFor(model => model.Thumbnail, "Image", htmlAttributes: new { @class = "" })
                        @Html.EditorFor(model => model.Thumbnail, new { htmlAttributes = new { @class = "form-control", id = "thumbnail" } })
                        @Html.ValidationMessageFor(model => model.Thumbnail, "", new { @class = "invalid-feedback" })
                    </div>

                    <div class="mb-4">
                        @Html.LabelFor(model => model.Description, htmlAttributes: new { @class = "" })
                        @Html.EditorFor(model => model.Description, new { htmlAttributes = new { @class = "form-control", placeholder = "Enter description", autocomplete = "off" } })
                        @Html.ValidationMessageFor(model => model.Description, "", new { @class = "invalid-feedback" })
                    </div>

                    <div class="mb-4">
                        @Html.LabelFor(model => model.Status, htmlAttributes: new { @class = "" })
                        @Html.EnumDropDownListFor(model => model.Status, htmlAttributes: new { @class = "form-control" })
                        @Html.ValidationMessageFor(model => model.Status, "", new { @class = "invalid-feedback" })
                    </div>
                </div>
                <div class="col-sm-6 col-md-6">
                    <div class="d-none py-4 px-10">
                        <img id="d_thumbnail" src="" alt="image" style="width: 100%;" />
                    </div>
                </div>
                <div class="col-12">
                    <div class="mt-3">
                        <button class="btn btn-sm mb-2 me-2 btn-outline-success" type="submit"><i class="far fa-save me-2"></i>Save</button>
                    </div>
                </div>
            </div>
        }
    </div>
</div>
@section Scripts {
    <script type="text/javascript">
        $(document).ready(function () {
            if ($('#thumbnail').val() != '') {
                $('#d_thumbnail').parent().removeClass('d-none').addClass('d-block');
                $('#d_thumbnail').attr('src', $('#thumbnail').val());
            }
            $('#d_thumbnail').attr('src', $('#thumbnail').val());
            $('#thumbnail').blur(function () {
                if ($(this).val() != '') {
                    $('#d_thumbnail').parent().removeClass('d-none').addClass('d-block');
                    $('#d_thumbnail').attr('src', $(this).val());
                } else {
                    $('#d_thumbnail').parent().removeClass('d-block').addClass('d-none');
                }

            })
        });
    </script>
}

