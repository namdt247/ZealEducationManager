@model Zeal_Institute.Models.Exam

@{
    ViewBag.Title = "Create";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}
<p class="text-left">
    <a href="@Url.Action("Index", "Exams")" class="text-gray-700"><i class="fas fa-angle-left me-2"></i> Back to List</a>
</p>
<h4>Create exam</h4>

<div class="card shadow-sm table-wrapper mb-3">
    <div class="card-body">
        @using (Html.BeginForm())
        {
            @Html.AntiForgeryToken()
            <div class="row">
                <div class="col-sm-6 col-md-6">
                    @Html.ValidationSummary(true, "", new { @class = "invalid-feedback" })
                    <div class="mb-4">
                        @Html.LabelFor(model => model.BatchId, "Batch", htmlAttributes: new { @class = "" })
                        @Html.DropDownList("BatchId", null, htmlAttributes: new { @class = "form-control", required = ""})
                        @Html.ValidationMessageFor(model => model.BatchId, "", new { @class = "invalid-feedback" })
                    </div>

                    <div class="mb-4">
                        @Html.LabelFor(model => model.DateExam, "Date exam", htmlAttributes: new { @class = "" })
                        @Html.EditorFor(model => model.DateExam, new { htmlAttributes = new { @class = "form-control", required = "" } })
                        @Html.ValidationMessageFor(model => model.DateExam, "", new { @class = "invalid-feedback" })
                    </div>

                    <div class="mb-4">
                        @Html.LabelFor(model => model.StartTime, "Start time", htmlAttributes: new { @class = "" })
                        @Html.EditorFor(model => model.StartTime, new { htmlAttributes = new { @class = "form-control", placeholder = "09:00:00", required = "" } })
                        @Html.ValidationMessageFor(model => model.StartTime, "", new { @class = "invalid-feedback" })
                    </div>

                    <div class="mt-3">
                        <button class="btn btn-sm mb-2 me-2 btn-outline-success" type="submit"><i class="far fa-save me-2"></i>Save</button>
                    </div>
                </div>
            </div>
        }
    </div>
</div>
