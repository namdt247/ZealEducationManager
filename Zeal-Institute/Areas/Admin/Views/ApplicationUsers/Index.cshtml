@model IEnumerable<Zeal_Institute.Models.ApplicationUser>

@{
    ViewBag.Title = "Index";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
    var count = 0;
}

<h4>List student</h4>

<div class="d-flex justify-content-between flex-wrap flex-md-nowrap align-items-center py-4">
    <div>
        <a class="btn btn-success btn-sm text-light me-2" href="@Url.Action("Create", "ApplicationUsers")">
            <span class="fas fa-plus me-2"></span> Create
        </a>
    </div>
</div>
<div class="card shadow-sm table-wrapper table-responsive">
    <table class="display table table-flush" id="table_id">
        <thead class="thead-light">
            <tr>
                <th class="text-center">#</th>
                <th class="text-center">Avatar</th>
                <th>Name</th>
                <th>Email</th>
                <th>Phone</th>
                <th>Created At</th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                count++;
                <tr>
                    <td class="text-center">@count</td>
                    <td class="text-center">
                        <img src="@item.Avatar" alt="avatar" class="image-list-object" />
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.FullName)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Email)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.PhoneNumber)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.CreatedAt)
                    </td>
                    <td class="text-center">
                        <a href="@Url.Action("Edit", "ApplicationUsers", new { id = item.Id })" class="me-4 text-warning" title="Edit"><i class="fa fa-pencil-alt"></i></a>
                        <a href="@Url.Action("Delete", "ApplicationUsers", new { id = item.Id })" class="text-danger" title="Delete"><i class="fa fa-trash"></i></a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>

@section Scripts {
    <script type="text/javascript">
        $(document).ready(function () {
            $('#table_id').DataTable();
        });
    </script>
}