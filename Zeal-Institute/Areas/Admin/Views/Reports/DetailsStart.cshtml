@model Zeal_Institute.Models.Batch

@{
    ViewBag.Title = "DetailsStart";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
    List<Zeal_Institute.Models.ApplicationUser> listStudent = (List < Zeal_Institute.Models.ApplicationUser >)ViewData["ListStudent_Start"];
    var count = 0;
}

<p class="text-left">
    <a href="@Url.Action("StartBatches", "Reports")" class="text-gray-700"><i class="fas fa-angle-left me-2"></i> Back to List</a>
</p>
<h4>Detailed start batches</h4>


<div class="row mb-3">
    <div class="col-sm-3 col-md-3">
        <div class="card">
            <div class="card-body">
                <h5>Details</h5>
                <hr />
                <label>Batch</label>
                <p class="ps-3 pb-2"><strong>@Html.DisplayFor(model => model.Name)</strong></p>

                <label>Code</label>
                <p class="ps-3 pb-2"><strong>@Html.DisplayFor(model => model.Code)</strong></p>

                <label>Course</label>
                <p class="ps-3 pb-2"><strong>@Html.DisplayFor(model => model.Course.Name)</strong></p>

                <label>Description</label>
                <p class="ps-3 pb-2"><strong>@Html.DisplayFor(model => model.Description)</strong></p>

                <label>Date Start</label>
                <p class="ps-3 pb-2"><strong>@Html.DisplayFor(model => model.DateStart)</strong></p>

                <label>@Html.DisplayNameFor(model => model.DateEnd)</label>
                <p class="ps-3 pb-2"><strong>@Html.DisplayFor(model => model.DateEnd)</strong></p>
            </div>
        </div>
    </div>
    <div class="col-sm-9 col-md-9">
        <div class="card">
            <div class="card-body">
                <h5>List student</h5>
                <hr />
                <table class="table table-striped">
                    <thead>
                        <tr>
                            <th class="text-center">#</th>
                            <th class="text-center">Avatar</th>
                            <th>Name</th>
                            <th>Email</th>
                            <th>Phone</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in listStudent)
                        {
                            count++;
                            <tr>
                                <td class="text-center">@count</td>
                                <td class="text-center">
                                    <img src="@item.Avatar" alt="Alternate Text" width="40" height="40" />
                                </td>
                                <td>@item.FullName</td>
                                <td>@item.Email</td>
                                <td>@item.PhoneNumber</td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>
