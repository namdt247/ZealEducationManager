@model Zeal_Institute.Models.Batch

@{
    ViewBag.Title = "DetailsEnding";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}

<p class="text-left">
    <a href="@Url.Action("StartBatches", "Reports")" class="text-gray-700"><i class="fas fa-angle-left me-2"></i> Back to List</a>
</p>
<h4>Detailed start batches</h4>


<div class="row mb-3">
    <div class="col-sm-4 col-md-4">
        <div class="card">
            <div class="card-body">
                <h5>Details</h5>
                <hr />
                <label>Batch</label>
                <p class="ps-3 pb-2"><strong>@Html.DisplayFor(model => model.Name)</strong></p>

                <label>Code</label>
                <p class="ps-3 pb-2"><strong>@Html.DisplayFor(model => model.Code)</strong></p>

                <label>Course</label>
                <p class="ps-3 pb-2"><strong>@Html.DisplayFor(model => model.Course.Name)</strong></p>

                <label>Description</label>
                <p class="ps-3 pb-2"><strong>@Html.DisplayFor(model => model.Description)</strong></p>

                <label>Date Start</label>
                <p class="ps-3 pb-2"><strong>@Html.DisplayFor(model => model.DateStart)</strong></p>

                <label>@Html.DisplayNameFor(model => model.DateEnd)</label>
                <p class="ps-3 pb-2"><strong>@Html.DisplayFor(model => model.DateEnd)</strong></p>
            </div>
        </div>
    </div>
    <div class="col-sm-8 col-md-8">
        <div class="card">
            <div class="card-body">
                <h5>List student</h5>
                <hr />
                <table class="table table-striped">
                    <thead>
                        <tr>
                            <th>#</th>
                            <th>Avatar</th>
                            <th>Name</th>
                            <th>Code</th>
                            <th>Email</th>
                            <th>Phone</th>
                        </tr>
                    </thead>
                    <tbody>
                            <tr>
                                <td></td>
                                <td></td>
                                <td></td>
                                <td></td>
                                <td></td>
                                <td></td>
                            </tr>
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>
