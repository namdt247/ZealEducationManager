@model IEnumerable<Zeal_Institute.Models.Certificate>

@{
    ViewBag.Title = "ListCertificate";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
    var count = 0;
}

<h4 class="py-3">List Certificates</h4>

<div class="card shadow-sm table-wrapper table-responsive">
    <table class="display table table-flush" id="table_id">
        <thead class="thead-light">
            <tr>
                <th class="text-center">#</th>
                <th>
                    Student
                </th>
                <th>
                    Batch
                </th>
                <th>
                    Course
                </th>
                <th>
                    Mark
                </th>
                <th>
                    Registration Date
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Status)
                </th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                count++;
                <tr>
                    <td class="text-center">@count</td>
                    <td>
                        @Html.DisplayFor(modelItem => item.ApplicationUser.FullName)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Batch.Name)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Batch.Course.Name)
                    </td>
                    <td>
                        @item.Mark(item.BatchId, item.ApplicationUserId)%
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.RegistrationDate)
                    </td>
                    <td class="text-danger">
                        @Html.DisplayFor(modelItem => item.Status)
                    </td>
                    <td>
                        <a href="@Url.Action("DetailsCertificate", "Reports", new { id = item.Id })" class="me-4 text-warning" title="Edit"><i class="fa fa-pencil-alt"></i></a>
                    </td>
                </tr>
            }
        </tbody>

    </table>
</div>

@section Scripts {
    <script type="text/javascript">
        $(document).ready(function () {
            $('#table_id').DataTable();
        });
    </script>
}
